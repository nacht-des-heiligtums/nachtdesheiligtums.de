#! /usr/bin/env bash
set -e

ENV="${1:-dev}"
if [ "${ENV}" != "production" ]; then
  # load .env variables unless in production mode
  source bin/dotenv
  dotenv
fi

config="_config.yml"
env_config="_config.${ENV}.yml"
if [ -f "${env_config}" ]; then
  config="${config},${env_config}"
fi

bundle exec jekyll build --config "${config}"
